{
	"manifest_version": 2,
	"name": "Readonly Picasa Web Album",
	"description": "Make the Picasa Web Album and Google+ Photos readonly.",
	"version": "1.0",

	"background": {
		"scripts": [ "background.js" ]
	},

	"content_scripts": [
		{
			"matches": [
				"http://picasaweb.google.com/*",
				"https://picasaweb.google.com/*",
				"http://plus.google.com/*",
				"https://plus.google.com/*"
			],
			"js": [
				"jquery.min.js", "contentscript.js"
			],
			"run_at": "document_idle",
			"all_frames": false
		}
	],

	"page_action": {
		"default_icon": "icon.png"
	},

	"permissions": [
		"tabs"
	]
}
